
@{
    ViewBag.Title = "AssetReportByDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Asset Report By Department</h2>

<button type="button" class="btn btn-primary" id="LinkExcel" value="Download Report">Download Report Excel</button>
<button type="button" class="btn btn-primary" id="LinkPDF" value="Download Report">Download Report Pdf</button>


<script>

    $('#LinkExcel').click(function () {
        GotoExport('Excel');
        return false;
    });

    $('#LinkPDF').click(function () {

        GotoExport('pdf');
        return false;
    });

    function GotoExport(_FileType) {
        var ContentType = "";
        if (_FileType == "Excel")
            ContentType = "application/vnd.ms-excel";
        else if (_FileType == "pdf")
            ContentType = "application/pdf";

        var target = "@Url.Action("AssetReportByDepartmentExport", "Asset")";
        var url = target + '?FileType=' + _FileType + '&ContentType=' + ContentType + '&CompanyId=' + 10 + '&UnitId=' + 11 + '&DepartmentId=' + 0 + '&CustodianId=' + 1 + '&SubCustodianId=' +1 + '&AssetItemId=' +0;
        window.location.href = url;
        return false;
    }
</script>
